{
  "name": "jbeat-ui-suite",
  "private": true,
  "packageManager": "pnpm@8.15.6",
  "scripts": {
    "dev:uikit": "turbo run storybook --filter=@jbeat/uikit",
    "dev:pages": "turbo run dev --filter=@jbeat/pages",
    "build": "turbo run lint && turbo run test && turbo run build",
    "build:uikit": "turbo run lint --filter=@jbeat/uikit && turbo run test --filter=@jbeat/uikit && turbo run build --filter=@jbeat/uikit",
    "build:pages": "turbo run lint --filter=@jbeat/pages && turbo run test --filter=@jbeat/pages && turbo run build --filter=@jbeat/pages",
    "lint": "turbo run lint",
    "lint:uikit": "turbo run lint --filter=@jbeat/uikit",
    "lint:pages": "turbo run lint --filter=@jbeat/pages",
    "test": "turbo run test",
    "test:uikit": "turbo run test --filter=@jbeat/uikit",
    "test:pages": "turbo run test --filter=@jbeat/pages",
    "test:e2e": "turbo run test:e2e",
    "test:uikit:e2e": "turbo run test:e2e --filter=@jbeat/uikit",
    "test:pages:e2e": "turbo run test:e2e --filter=@jbeat/pages"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.3",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "playwright": "^1.48.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "turbo": "^2.6.1",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vitest": "^2.1.8"
  }
}
